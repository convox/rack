apiVersion: v1
kind: ConfigMap
metadata:
  namespace: {{.Namespace}}
  name: resource-{{.Name}}
  labels:
    system: convox
    scope: resource
    rack: {{.Rack}}
    app: {{.App}}
    resource: {{.Name}}
data:
  URL: "postgres://app:{{.Password}}@resource-{{.Name}}.{{.Namespace}}.svc.cluster.local:5432/app"
---
kind: PersistentVolume
apiVersion: v1
metadata:
  namespace: {{.Namespace}}
  name: resource-{{.Name}}
  labels:
    system: convox
    scope: resource
    rack: {{.Rack}}
    app: {{.App}}
    resource: {{.Name}}
spec:
  capacity:
    storage: 10Gi
  accessModes:
  - ReadWriteOnce
  hostPath:
    path: "/mnt/data"
---
kind: PersistentVolumeClaim
apiVersion: v1
metadata:
  namespace: {{.Namespace}}
  name: resource-{{.Name}}
  labels:
    system: convox
    scope: resource
    rack: {{.Rack}}
    app: {{.App}}
    resource: {{.Name}}
spec:
  accessModes:
  - ReadWriteOnce
  resources:
    requests:
      storage: 10Gi
---
apiVersion: apps/v1
kind: Deployment
metadata:
  namespace: {{.Namespace}}
  name: resource-{{.Name}}
  labels:
    system: convox
    scope: resource
    rack: {{.Rack}}
    app: {{.App}}
    resource: {{.Name}}
spec:
  selector:
    matchLabels:
      system: convox
      rack: {{.Rack}}
      app: {{.App}}
      resource: {{.Name}}
  replicas: 1
  template:
    metadata:
      labels:
        system: convox
        scope: resource
        rack: {{.Rack}}
        app: {{.App}}
        type: resource
        resource: {{.Name}}
    spec:
      containers:
      - name: postgres
        image: postgres:{{ coalesce (index .Parameters "version") "10.5" }}
        imagePullPolicy: IfNotPresent
        ports:
        - containerPort: 5432
        env:
        - name: POSTGRES_DB
          value: app
        - name: POSTGRES_USER
          value: app
        - name: POSTGRES_PASSWORD
          value: "{{.Password}}"
        volumeMounts:
        - mountPath: /var/lib/postgresql/data
          name: postgres-data
      volumes:
      - name: postgres-data
        persistentVolumeClaim:
          claimName: resource-{{.Name}}
---
apiVersion: v1
kind: Service
metadata:
  namespace: {{.Namespace}}
  name: resource-{{.Name}}
  labels:
    system: convox
    scope: resource
    rack: {{.Rack}}
    app: {{.App}}
    resource: {{.Name}}
spec:
  type: NodePort
  ports:
  - port: 5432
  selector:
    system: convox
    scope: resource
    rack: {{.Rack}}
    app: {{.App}}
    resource: {{.Name}}
