#!/bin/sh

set -e

rack=$1
version=$2

[ "$rack" == "" ] && echo "rack required" && exit 1
[ "$version" == "" ] && echo "version required" && exit 1

provider/k8s/bin/rack-promote $rack $version

kubectl apply -f - <<EOF
apiVersion: v1
kind: ConfigMap
metadata:
  namespace: $rack
  name: env-web
data:
  PROVIDER: klocal
EOF

# ca
# kubectl apply -f - <<EOF
# ---
# apiVersion: v1
# kind: Secret
# metadata:
#   namespace: convox
#   name: ca
#   labels:
#     system: convox
#     service: router
# type: kubernetes.io/tls
# data:
#   tls.crt: "$(sudo cat /etc/convox/ca.crt | base64)"
#   tls.key: "$(sudo cat /etc/convox/ca.key | base64)"
# EOF

# router
kubectl apply -f - <<EOF
apiVersion: v1
kind: Namespace
metadata:
  name: convox
---
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRole
metadata:
  namespace: convox
  name: router
  labels:
    system: convox
    service: router
rules:
  - apiGroups:
      - ""
      - extensions
    resources:
      - ingresses
      - services
    verbs:
      - get
      - list
      - watch
---
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRoleBinding
metadata:
  namespace: convox
  name: router
  labels:
    system: convox
    service: router
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: rack
subjects:
  - kind: ServiceAccount
    name: router
    namespace: convox
---
apiVersion: v1
kind: ServiceAccount
metadata:
  namespace: convox
  name: router
  labels:
    system: convox
    service: router
---
apiVersion: apps/v1
kind: Deployment
metadata:
  namespace: convox
  name: router
  labels:
    system: convox
    service: router
spec:
  replicas: 1
  revisionHistoryLimit: 0
  selector:
    matchLabels:
      system: convox
      service: router
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxSurge: 1
      maxUnavailable: 1
  minReadySeconds: 5
  template:
    metadata:
      labels:
        system: convox
        service: router
    spec:
      containers:
      - name: router
        args:
        - bin/router
        env:
        - name: VERSION
          value: "$version"
        image: convox/rack:$version
        imagePullPolicy: IfNotPresent
        ports:
        - containerPort: 80
          protocol: TCP
        - containerPort: 443
          protocol: TCP
        - containerPort: 5453
          protocol: UDP
      serviceAccountName: router
---
apiVersion: v1
kind: Service
metadata:
  namespace: convox
  name: router
  labels:
    system: convox
    service: router
spec:
  type: LoadBalancer
  ports:
  - name: http
    port: 80
    targetPort: 80
    protocol: TCP
  - name: https
    port: 443
    targetPort: 443
    protocol: TCP
  selector:
    system: convox
    service: router
---
apiVersion: v1
kind: Service
metadata:
  namespace: convox
  name: resolver
  labels:
    system: convox
    service: router
spec:
  type: LoadBalancer
  ports:
  - name: dns
    port: 5453
    targetPort: 5453
    protocol: UDP
  selector:
    system: convox
    service: router
EOF
