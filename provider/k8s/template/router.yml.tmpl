apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  namespace: {{.Namespace}}
  name: {{.App.Name}}
  annotations:
    alb.ingress.kubernetes.io/scheme: internet-facing
    {{ range .Services }}
    {{ if .Port.Port }}
    convox.ingress.service.{{.Name}}.{{.Port.Port}}.protocol: {{.Port.Scheme}}
    {{ end }}
    {{ end }}
  labels:
    system: convox
    rack: {{.Rack}}
    app: {{.App.Name}}
    release: {{.Release.Id}}
spec:
  tls:
  - hosts:
    {{ range .Services }}
    {{ if .Port }}
    - {{ host $.App.Name .Name }}
    {{ end }}
    {{ end }}
  rules:
    {{ range .Services }}
    {{ if .Port.Port }}
    - host: {{ host $.App.Name .Name }}
      http:
        paths:
        - backend:
            serviceName: {{.Name}}
            servicePort: {{.Port.Port}}
    {{ end }}
    {{ end }}
